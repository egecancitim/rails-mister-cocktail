<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'https://images.unsplash.com/photo-1511715112108-9acc6c3ff61f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80'; %>);">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 create-box">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn' %>
      <% end %>
    </div>
  </div>
  <div class="back">
   <%= link_to "Back to all cocktails", root_path %>
  </div>
</div>
</div>
